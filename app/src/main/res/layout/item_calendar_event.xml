<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Color indicator for activity type -->
    <View
        android:id="@+id/colorIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@color/primary_light"
        android:layout_marginEnd="12dp" />

    <!-- Main content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title and Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/jscc_charcoal" />

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM - 10:30 AM"
                android:textSize="12sp"
                android:textColor="@color/jscc_charcoal" />

        </LinearLayout>

        <!-- People and Energy Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvEventPeople"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘¥ 5 people"
                android:textSize="12sp"
                android:textColor="@color/jscc_charcoal"
                android:drawablePadding="4dp" />

            <TextView
                android:id="@+id/tvEnergyBurn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2h"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/tertiary_light"
                android:background="@drawable/rounded_background"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Description (if available) -->
        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12sp"
            android:textColor="@color/jscc_charcoal"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>