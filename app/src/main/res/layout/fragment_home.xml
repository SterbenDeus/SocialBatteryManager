<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jscc_charcoal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Optional: Gold Accent Bar at the top -->
        <View
            android:layout_width="64dp"
            android:layout_height="5dp"
            android:background="@color/jscc_gold_start"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Social Battery & Energy Data Side by Side -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/jscc_white"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp"
            android:clipToPadding="false">

            <!-- Social Battery Section (left) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvBatteryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/social_energy_battery"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_charcoal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieBattery"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/battery"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvBatteryPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_percent_65"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_gold_start"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Test Battery Button: Remove for production -->
                <Button
                    android:id="@+id/btnTestBattery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_battery"
                    android:textColor="@color/jscc_white"
                    android:backgroundTint="@color/jscc_gold_start"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Energy Data Section (right) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="24dp"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/energy_data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_charcoal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capacity"
                    android:textSize="14sp"
                    android:textColor="@color/jscc_charcoal"/>
                <TextView
                    android:id="@+id/tvCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_gold_start"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining"
                    android:textSize="14sp"
                    android:textColor="@color/jscc_charcoal"/>
                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_gold_start"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/est_to_target"
                    android:textSize="14sp"
                    android:textColor="@color/jscc_charcoal"/>
                <TextView
                    android:id="@+id/tvEstTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3d"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/jscc_gold_start"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Add/Remove Energy Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnRemoveEnergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_energy"
                android:textColor="@color/jscc_charcoal"
                android:backgroundTint="@color/jscc_light_gray"/>

            <Button
                android:id="@+id/btnAddEnergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_energy"
                android:textColor="@color/jscc_white"
                android:backgroundTint="@color/jscc_gold_start"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/jscc_charcoal"
            android:backgroundTint="@color/jscc_light_gray"
            android:layout_marginBottom="16dp"/>

        <!-- CalendarView under buttons -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>
