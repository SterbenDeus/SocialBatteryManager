<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/insightIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circular_background"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/insightTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do More"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/insightDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule more activities between 7-9 PM when your energy drain is lowest. You could fit 2-3 more social interactions."
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:lineSpacingMultiplier="1.1" />

    </LinearLayout>

</LinearLayout>